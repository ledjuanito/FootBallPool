@model FootBallPool.Models.TeamIndex
@{
    ViewBag.Title = "TeamIndex";
}

<h2>Teams</h2>
<hr />
<a class="btn btn-default" href="@Url.Action("AddTeam","League",new { id = Model.League.LeagueID })">Add Team</a>
<table class="table table-striped">
    <thead>
        <tr>
            @if (Model.Index.Count() > 0)
            {
                <th>@Html.DisplayNameFor(m => m.Index.FirstOrDefault().Image)</th>
                <th>@Html.DisplayNameFor(m => m.Index.FirstOrDefault().Name)</th>
                <th>@Html.DisplayNameFor(m => m.Index.FirstOrDefault().LeagueID)</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Index)
        {
        <tr>
            <td>
                <img src="@item.Image" style="width:5vh" />
            </td>
            <td>
                @Html.DisplayTextFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayTextFor(m => Model.League.Name)
            </td>
        </tr>
        }
    </tbody>
</table>

