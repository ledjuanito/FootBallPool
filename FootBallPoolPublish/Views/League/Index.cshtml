@model IEnumerable<FootBallPool.Models.League>
@{
    ViewBag.Title = "Leagues";
    var matchWeeks = (Dictionary<string, int>)ViewBag.MatchWeeks;
}

<h2>Index</h2>
<hr />
<a class="btn btn-default" href="@Url.Action("AddLeague","League")">Add League</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>Matchweeks</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Image" style="height:4vh" />
                </td>
                <td>
                    @Html.DisplayTextFor(m => item.Name)
                </td>
                <td>
                    @Html.Label(matchWeeks.ContainsKey(item.LeagueID) ? matchWeeks[item.LeagueID].ToString() : "0")
                </td>
                <td>
                    <a href="@Url.Action("TeamIndex","League",new { id = item.LeagueID })" data-toggle="tooltip" title="Teams" style="padding:0 10px"><i class="fas fa-users" style="font-size:3vh"></i> </a>
                    <a href="@Url.Action("MatchWeek","League",new { id = item.LeagueID })" data-toggle="tooltip" title="Matchweek" style="padding:0 10px"><i class="fas fa-list-ol" style="font-size:3vh"></i> </a>
                    <a href="#" data-toggle="tooltip" title="Update" style="padding:0 10px"><i class="fas fa-edit" style="font-size:3vh"></i> </a>
                    <a href="#" data-toggle="tooltip" title="Delete" style="padding:0 10px"><i class="fas fa-trash-alt" style="font-size:3vh"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>

